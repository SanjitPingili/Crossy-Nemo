<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/welcomeScreen"
        android:layout_width="wrap_content"
        android:layout_height="731dp"
        android:adjustViewBounds="true"
        android:background="@drawable/welcomebackground"
        android:cropToPadding="true"></ImageView>

    <ImageView
        android:id="@+id/titleNemo"
        android:layout_width="wrap_content"
        android:layout_height="197dp"
        android:cropToPadding="false"
        android:src="@drawable/pixelnemotitle"></ImageView>

    <RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/playButton"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:backgroundTint="#39BDF1"
            android:text="@string/play"
            android:translationX="170dp"
            android:translationY="500dp" />
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>